<!DOCTYPE html>
<html>
  <head>
    <title><%= siteData.name %> | <%= profileData.user %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/hljs.css" />
  </head>

  <body>
    <%- include('partials/header', { serverData }) %>

    <main class="container-fluid">
      <div class="row">
        <div class="col-md-8">
          <div class="profile-data-container">
            <div class="profile-data-name-container">
              <img
                class="profile-data-photo"
                src="<%= profileData.pfp %>"
                alt="Profile Picture"
                width="128"
                height="128" />
              <h2 class="profile-data-username">@<%= profileData.user %></h2>
            </div>
            <div class="profile-data-description-container">
              <%-
              purify.sanitize(marked.render(profileData.description.replaceAll("\\n",
              "\n"))) %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="profile-user-info-container">
            <h3 class="profile-user-info-container-text">Creation Date</h3>
            <p style="text-align: center">
              <%= profileData.creationDate.toDate().toDateString() + ", at " +
              profileData.creationDate.toDate().toLocaleTimeString() %>
            </p>
            <br /><br /><br />
            <div class="profile-user-info-blog-posts">
              <h3 style="text-align: center">Recent User Posts</h3>
              <ul class="profile-user-info-blog-posts-list">
                <a href="/post/e8FmS1njQ4Nd17fi9SCZ"
                  >Development Testing Post</a
                >
                <a href="/post/VQ9rUZ9OWfYZLzONjJ4M">Markdown Post Test</a>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer', { serverData }) %>
  </body>
</html>
